{
  "name": "vscode-ai-asisstant-extension",
  "displayName": "vscode_ai_asisstant_extension",
  "description": "VS Code plugin for code generation via a local high-performance server.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages",
    "AI",
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-ai-asisstant-extension.generateCodeAtCursor",
    "onCommand:vscode-ai-asisstant-extension.refactorSelectedCode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ai-asisstant-extension.CustomizedCoderAssistant",
        "title": "CustomizedCoderAssistant",
        "icon": "$(lightbulb-sparkle)"
      },
      {
        "command": "vscode-ai-asisstant-extension.generateCodeAtCursor",
        "title": "AI: Generate Code (Prompt)",
        "icon": "$(lightbulb)"
      },
      {
        "command": "vscode-ai-asisstant-extension.refactorSelectedCode",
        "title": "AI: Refactor Selected Code",
        "icon": "$(tools)"
      }
    ],
    "menus": {
      "editorContext": [
        {
          "command": "vscode-ai-asisstant-extension.generateCodeAtCursor",
          "group": "ai-code@1",
          "when": "editorHas",
          "title": "Ask AI to Generate Code..."
        },
        {
          "command": "vscode-ai-asisstant-extension.refactorSelectedCode",
          "group": "ai-code@2",
          "when": "editorHasSelection",
          "title": "Ask AI to Refactor/Analyze Selection"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
